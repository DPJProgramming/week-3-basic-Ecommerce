@model IEnumerable<CartGameViewModel>

@{
    ViewData["Title"] = "View Shopping Cart";
}

<h1>Shopping Cart</h1>

@if(Model.Count() == 0) {
    <h2>Cart Is Empty</h2>
}
else{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GameTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GamePrice)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GamePrice)
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.GameId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
