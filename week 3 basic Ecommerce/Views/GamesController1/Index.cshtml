@model IEnumerable<Game>

@{
    ViewData["Title"] = "Game Catalog";
}

<h1>Game Catalog</h1>

@if(TempData["Message"] != null){
    <div class="alert alert-success alert-dismissable" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" asp-controller="GamesController1">Create Game</a>
</p>
<table class="table table-striped table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Game item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <!-- asp action link to edit page to edit each thing @item.GameId gets each one by id so it knows which one is clicked -->

                <a class="btn btn-primary" asp-action="Edit" asp-route-id ="@item.GameId">Edit</a>

                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.GameId">Details</a>               

                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.GameId">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
